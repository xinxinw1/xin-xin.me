extends layout.pug

block vars
  - title="Contact"

block article
  article.flexbox
    h1 #{title}
    
    form.form.flex.flexbox(action="/contact", method="POST")
      input(type="text", placeholder="Name")
      input(type="text", placeholder="Email")
      input(type="text", placeholder="Subject")
      textarea.flex(placeholder="Your Message")
      p: input(type="submit", value="Send")
